<?xml version='1.0' encoding='utf-8'?>
<widget id="org.jumpmind.openpos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OpenPOS</name>
    <description>
        OpenPOS
    </description>
    <author email="chenson42@gmail.com" href="http://jumpmind.com">
        JumpMind
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="BackupWebStorage" value="local" />
        <icon height="152" src="res/icon/ios/icon-72-2x.png" width="152" />
        <icon height="120" src="res/icon/ios/icon-60-2x.png" width="120" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.3" />
    <engine name="osx" spec="^4.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^7.0.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
    </plugin>
</widget>
